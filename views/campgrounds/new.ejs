<% layout('layouts/boilerplate') -%>

<div class="row">
  <h1 class="text-center">キャンプ場の新規登録</h1>
  <div class="offset-3 col-3">
    <form action="/campgrounds" method="POST" class="validated-form" novalidate>
      <!-- name="campground[title]"にすることでcampgroundの中のtitleにデータを渡すことになる -->
      <!-- {"campground":{"title":"テスト","location":"テスト"}}とdataがはいる -->
      <div class="mb-3">
        <label for="title" class="form-label">タイトル</label>
        <input
          type="text"
          name="campground[title]"
          id="title"
          class="form-control"
          required
        />
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">場所</label>
        <input
          type="text"
          name="campground[location]"
          id="location"
          class="form-control"
          required
        />
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">画像URL</label>
        <input
          type="text"
          name="campground[image]"
          id="image"
          class="form-control"
          required
        />
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">価格</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">¥</span>
          <input
            type="number"
            id="price"
            class="form-control"
            required
            placeholder="0"
            aria-label="価格"
            aria-describedby="price-label"
            name="campground[price]"
          />
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">説明</label>
        <textarea
          type="text"
          name="campground[description]"
          id="description"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">登録する</button>
      </div>
    </form>
    <a href="/campgrounds">一覧に戻る</a>
  </div>
</div>



